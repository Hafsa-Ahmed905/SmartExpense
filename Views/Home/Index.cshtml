@{
    ViewData["Title"] = "SmartExpense";
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />



<div id="homepage">

    <div class="carousel-container">
        <div id="homeCarousel" class="carousel slide h-100" data-bs-ride="carousel">
            <div class="carousel-inner h-100">
                <div class="carousel-item active h-100">
                    <img src="~/images/1.jpg" class="d-block w-100 h-100" alt="Slide 1" />
                </div>
                <div class="carousel-item h-100">
                    <img src="~/images/2.jpg" class="d-block w-100 h-100" alt="Slide 2" />
                </div>
                <div class="carousel-item h-100">
                    <img src="~/images/3.jpg" class="d-block w-100 h-100" alt="Slide 3" />
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#homeCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>

        <div class="hero">
            <h1 class="display-3">Manage Your Money Smarter</h1>
            <p class="lead">Track your expenses, set budgets, and take control of your finances with ease. Join thousands of users who have saved money with SmartExpense.</p>
            <div class="mt-4">
                <a asp-controller="Account" asp-action="Signup" class="btn btn-hero btn-primary">Get Started</a>
                <a asp-controller="Home" asp-action="Features" class="btn btn-hero btn-outline-light">Learn More</a>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <section class="features">
        <div class="container">
            <h2 class="section-title text-center">Why SmartExpense?</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-card text-center">
                        <div class="feature-icon">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <h4>Track Everything</h4>
                        <p>Easily record every income and expense with customizable categories. Get a complete picture of your financial health.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card text-center">
                        <div class="feature-icon">
                            <i class="fas fa-chart-pie"></i>
                        </div>
                        <h4>Beautiful Reports</h4>
                        <p>Understand your spending with visual charts and insights. Identify trends and make informed financial decisions.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card text-center">
                        <div class="feature-icon">
                            <i class="fas fa-wallet"></i>
                        </div>
                        <h4>Smart Budgeting</h4>
                        <p>Create monthly budgets and stay in control of your money. Get alerts when you're approaching your limits.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3 col-6">
                    <div class="stat-item">
                        <div class="stat-number">50K+</div>
                        <p>Active Users</p>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="stat-item">
                        <div class="stat-number">$10M+</div>
                        <p>Saved by Users</p>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="stat-item">
                        <div class="stat-number">4.8</div>
                        <p>App Store Rating</p>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="stat-item">
                        <div class="stat-number">24/7</div>
                        <p>Customer Support</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonials -->
    <section class="testimonials">
        <div class="container">
            <h2 class="section-title text-center">What Our Users Say</h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="testimonial-card">
                        <div class="testimonial-text">
                            "SmartExpense helped me save over $5,000 in just six months. The budgeting features are incredibly intuitive!"
                        </div>
                        <div class="testimonial-author">- Sarah Johnson</div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="testimonial-card">
                        <div class="testimonial-text">
                            "I've tried many expense trackers, but SmartExpense is by far the best. The reports are exactly what I need."
                        </div>
                        <div class="testimonial-author">- Michael Chen</div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="testimonial-card">
                        <div class="testimonial-text">
                            "As a freelancer, tracking expenses was always a headache. SmartExpense made it simple and effective."
                        </div>
                        <div class="testimonial-author">- Jessica Williams</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 text-center">
                    <h2 class="mb-4">Ready to Take Control of Your Finances?</h2>
                    <p class="mb-4">Join thousands of satisfied users and start your journey to financial freedom today.</p>
                    <a asp-controller="Account" asp-action="Signup" class="btn btn-light btn-lg px-5">Start Now</a>
                </div>
            </div>
        </div>
    </section>

</div>
