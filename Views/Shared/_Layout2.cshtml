<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/png" href="~/images/smart-01.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="~/images/smart-01.png" sizes="16x16" />
    <link rel="apple-touch-icon" href="~/images/smart-01.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --bg-color: #f5f6fa;
            --text-color: #333;
            --card-bg: white;
            --sidebar-bg: #004d4d;
        }

        body {
            background: var(--bg-color);
            color: var(--text-color);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            transition: background-color 0.3s, color 0.3s;
        }

        body.dark-mode {
            --bg-color: #1a1a1a;
            --text-color: #e0e0e0;
            --card-bg: #2d2d2d;
            --sidebar-bg: #003636;
        }

        .card, .stat-card, .card-box {
            background: var(--card-bg);
            color: var(--text-color);
            transition: background-color 0.3s, color 0.3s;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background: var(--sidebar-bg);
            position: fixed;
            left: 0;
            top: 0;
            padding: 20px 0;
            transition: background-color 0.3s;
        }

            .sidebar a {
                color: white;
                display: block;
                padding: 14px 20px 14px 50px;
                text-decoration: none;
                margin-bottom: 8px;
                border-left: 4px solid transparent;
                text-align: left;
            }

                .sidebar a:hover, .sidebar a.active {
                    background: rgba(255,255,255,0.1);
                    border-left: 4px solid #10B981;
                }

        .main {
            margin-left: 250px;
            padding: 40px;
        }

        .form-control, .form-select {
            background: var(--card-bg);
            color: var(--text-color);
            border-color: #ddd;
        }

        .table {
            color: var(--text-color);
        }

        .table-light {
            background: var(--card-bg);
        }
    </style>
    <script>
        // Check for dark mode setting on page load
        document.addEventListener('DOMContentLoaded', function() {
            const darkMode = localStorage.getItem('darkMode') === 'true';
            if (darkMode) {
                document.body.classList.add('dark-mode');
            }
        });
    </script>
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="sidebar">
        
        <div class="mb-4">
            <img src="~/images/smart.png" alt="SmartExpense Logo" style="max-width: 90%; height: auto; margin-left: 5px;" />
        </div>
        <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
        <a asp-controller="Transaction" asp-action="Add">Add Transaction</a>
        <a asp-controller="Transaction" asp-action="List">Transactions</a>
        <a asp-controller="Budget" asp-action="Index">Budgets</a>
        <a asp-controller="Report" asp-action="Index">Reports</a>
        <a asp-controller="Setting" asp-action="Index">Settings</a>
        <form asp-controller="Home" asp-action="Logout" method="post" style="margin: 0; padding: 0; margin-top: 30px;">
            @Html.AntiForgeryToken()
            <button type="submit" class="sidebar-logout-btn" style="background: none; border: none; color: white; display: block; padding: 14px 20px 14px 50px; text-decoration: none; width: 100%; text-align: left; cursor: pointer; font-size: 1rem; border-left: 4px solid transparent; margin-bottom: 8px;">
                Logout
            </button>
        </form>


    </div>

    <div class="main">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
