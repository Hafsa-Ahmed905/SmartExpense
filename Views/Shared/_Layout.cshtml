<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
        
        if (currentController == "Home" && currentAction == "Index")
        {
            @:SmartExpense
        }
        else
        {
            @ViewData["Title"]
        }
    }</title>
    <link rel="icon" type="image/png" href="~/images/smart-01.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="~/images/smart-01.png" sizes="16x16" />
    <link rel="apple-touch-icon" href="~/images/smart-01.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @if (User.Identity.IsAuthenticated)
    {
        <meta name="authenticated" content="true" />
    }
    @RenderSection("Styles", required: false)
</head>
<body>
    @await Html.PartialAsync("_Navbar")
    <div class="container-fluid p-0">
        @RenderBody()
    </div>
    @await Html.PartialAsync("_Footer")
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>